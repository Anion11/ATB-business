extends ../../layouts/layout

block styles
  link(rel='stylesheet' href='../../styles/style.min.css')
  link(rel='stylesheet' href=fileName + '.min.css')

block scripts
  script(src='../../js/index.js')

block variables
  -
    const fileName = 'mining'
    const pageTitle ='Сотрудничество с недропользо­вателями'

    const benefitsItems = [
      {
        icon: 'img/benefit-1.svg',
        title: 'Кредитование на&nbsp;подготовку к&nbsp;сезону добычи',
      },
      {
        icon: 'img/benefit-2.svg',
        title: 'Инвестиционное кредитование на&nbsp;приобретение лицензий и&nbsp;иные цели',
      },
      {
        icon: 'img/benefit-3.svg',
        title: 'Лизинг/Инвестиционное кредитование на&nbsp;спецтехнику и&nbsp;оборудование',
      },
      {
        icon: 'img/benefit-4.svg',
        title: 'Займы в&nbsp;драгоценных металлах',
      },
      {
        icon: 'img/benefit-5.svg',
        title: 'Гарантии возмещения НДС',
      },
      {
        icon: 'img/benefit-6.svg',
        title: 'Авансы под драгоценный металл на&nbsp;аффинажном заводе',
      },
    ]

block content
  main
    +banner
      +banner__item('--mining')
        +banner__wrapper('img/banner_mining.jpg')
          +banner__h1('Сотрудничество с&nbsp;недропользо­вателями')
          +banner__foot
            +ui-button('оставить заявку', 'banner')(href='#form-section')
    .page-content
      +section('--mt0')
        .inner
          +section-head
            +ui-h4('Банк успешно осуществляет программу финансирования недропользователей и предлагает полный спектр кредитных услуг, которые востребованы отраслевыми клиентами:', 'section-head')
          +benefits(benefitsItems)
      +section('--bg-grey')
        .inner
          +mining-purchase
      +section#form-section
        .inner
          .form-container
            +section-head.text-center
              +ui-h2('Оставить заявку', 'section-head')
