extends ../../layouts/layout

block styles
  link(rel='stylesheet' href='../../styles/style.min.css')
  link(rel='stylesheet' href=fileName + '.min.css')

block scripts
  script(src='../../js/index.js')
  //- script(src=fileName + '.js')

block variables
  -const fileName = 'blog'
  -const pageTitle ='ATB'

  -
    const tabsHeadItems =[
      { text: '<a class="tabs-head__link" href="#">Все</a>' },
      { text: '<a class="tabs-head__link" href="#">Финансы</a>' },
      { text: '<a class="tabs-head__link" href="#">Налоги</a>' },
      { text: '<a class="tabs-head__link" href="#">Карты</a>' },
      { text: '<a class="tabs-head__link" href="#">Кредиты</a>' },
      { text: '<a class="tabs-head__link" href="#">Бизнес</a>' },
    ]

block content
  main
    +breadcrumbs
      +breadcrumbs-item('Главная', '/')
      +breadcrumbs-item('Статьи про бизнес')
    .page-content
      +section('--mt0')
        .inner
          +section-head
            +ui-h2('Статьи про бизнес')
        +tabs-head(tabsHeadItems, '', '--grey')
        +tabs-main
          .inner
            +blog
            +ui-pagination
