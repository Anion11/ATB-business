    ]

    const termsBannerData ={
      h3: 'Условия участия',
      descr: `Оставьте заявку и&nbsp;предоставьте
        <a href="#" class="text-orange">документы</a> до&nbsp;23&nbsp;июня 2023&nbsp;года,
        и&nbsp;получите кредит по&nbsp;льготной ставке от&nbsp;8%&nbsp;годовых`,
