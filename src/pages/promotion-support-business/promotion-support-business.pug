block variables
  -
    const fileName = 'promotion-support-business'
    const pageTitle ='Акция «Поддержим бизнес»'

    const benefitsItems = [
      { icon: 'img/icon_benefits1.svg', title: 'Без залога' },
      { icon: 'img/icon_benefits2.svg', title: 'Решение <span class="text-nowrap">по 2-м</span> документам ' },
      { icon: 'img/icon_benefits3.svg', title: '<a class="text-orange" href="#section-form">Подача заявки</a> онлайн' },
    ]

    const howGetItems = [
      {
        icon: 'img/icon_how_get1.svg',
        title: 'Оставьте <a class="text-orange" href="#section-form">заявку</a>',
        descr: 'на&nbsp;сайте',
      },
      {
        icon: 'img/icon_how_get2.svg',
        title: 'Предоставьте документы',
        descr: 'и дождитесь одобрения',
      },
      {
        icon: 'img/icon_how_get3.svg',
        title: 'Получите деньги на&nbsp;счет в&nbsp;АТБ',
        descr: 'после подписания договора',
      },
    ]

    const termsItems = [
      { name: 'Цель кредита', descr: 'Пополнение оборотных средств' },
      { name: 'Сумма кредита', descr: 'до&nbsp;30&nbsp;000&nbsp;000&nbsp;₽' },
      { name: 'Валюта кредита', descr: 'рубли&nbsp;РФ (₽)' },
      { name: 'Срок кредитования', descr: 'до&nbsp;36&nbsp;месяцев' },
      { name: 'Процентная ставка', descr: 'от 6% годовых' },
      { name: 'Комиссия за выдачу', descr: 'Отсутствует' },
      { name: 'Форма кредитования', descr: 'Кредит, невозобновляемая кредитная линия' },
    ]

    const requirementsItems1 =[
      { icon: 'img/requirement1.svg', text: 'Поручительство физического лица и/или юридических лиц' },
      { icon: 'img/requirement4.svg', text: 'Залог имущества' },
    ]

    const requirementsItems2 =[
      { icon: 'img/requirement3.svg', text: 'Анкета-заявка на&nbsp;получение кредита' },
      { icon: 'img/requirement5.svg', text: 'Выписка по расчетным счетам из Интернет-Банка за&nbsp;12&nbsp;месяцев или&nbsp;карточка сч.51 из&nbsp;1С' },
      { icon: 'img/requirement8.svg', text: 'При кредите свыше 10&nbsp;млн&nbsp;₽ официальная бухгалтерская/налоговая отчетность' },
    ]

    const requirementsItems3 =[
      { icon: 'img/requirement7.svg', text: 'Резидент РФ' },
      { icon: 'img/requirement2.svg', text: 'Срок существования с&nbsp;момента государственной регистрации – не&nbsp;менее 12&nbsp;месяцев' },
      { icon: 'img/requirement3.svg', text: 'Компания включена в&nbsp;Единый реестр субъектов малого и&nbsp;среднего предпринимательства, согласно 209-ФЗ' },
