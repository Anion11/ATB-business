  -const pageTitle ='Проверка контрагентов в интернет-банке'

  -
    const benefitsItems = [
      { icon: 'img/benefits_icon_1.svg', title: 'Проверенное решение о&nbsp;сотрудничестве' },
      { icon: 'img/benefits_icon_2.svg', title: 'Нужен только ИНН' },
      { icon: 'img/benefits_icon_3.svg', title: 'Снижение риска доначисления НДС' },
      { icon: 'img/benefits_icon_4.svg', title: 'Сохранение отчета в&nbsp;формате PDF' },
    ]

  -
    const howGetItems = [
      {
        icon: 'img/icon_how_get1.svg',
        title: 'Введите ИНН контрагента <a class="text-nowrap text-orange" href="#">в Интернет-банке</a>',
      },
      {
        icon: 'img/icon_how_get2.svg',
        title: 'Светофор за секунды собирает информацию',
      },
      {
        icon: 'img/icon_how_get3.svg',
        title: 'Вы получаете отчет и&nbsp;можете принять решение',
      },
    ]

  -
    const instruction = {
      title: 'Инструкция по работе с&nbsp;сервисом Светофор',
      img: [
        { src: 'instruction_1' },
        { src: 'instruction_2' },
        { src: 'instruction_3' },
        { src: 'instruction_4' },
        { src: 'instruction_5' },
      ],
      steps: [
        { title: 'Войдите в Интернет-банк и нажмите «Проверка контрагента»' },
        { title: 'Введите ИНН контрагента' },
        { title: 'После ввода ИНН появятся цветовые индикаторы' },
        { title: 'Наведите на сигнал, чтобы узнать, что он означает' },
        { title: 'Для получения расширенного экспресс-отчета нажмите кнопку «Скачать полный отчет»' },
      ]
    }

  -
    const tableData = {
      names: [
        'Основные сведения',
