block content
  main
    +banner
      +banner__item('--verification-counterparties')
        +banner__wrapper('img/banner_verification_counterparties.jpg')
          +banner__h1('Проверка контрагентов <br>в интернет-банке')
          +banner__descr('Ведите бизнес безопасно с&nbsp;сервисом «Светофор»', '--size-s').text-orange
          +banner__foot('--mob-row')
            +ui-button('Открыть счет', 'banner')(href='#')
            +banner__descr('', '--size-xs').text-link-underline.text-orange
              a(href='#') Войти

    .page-content.page-content--pt0
      +section
        .inner
          +benefits(benefitsItems, '--items2, --title-normal')

      +section()
        .inner
          +how-get('Как работает Светофор', howGetItems)

      +section('--bg-grey')
        .inner
          +section-head('--max-w900')
            +ui-h2('При вводе ИНН вы сразу узнаете главное в&nbsp;формате сигналов Светофора')
          +traffic-signals

      +section
        .inner
          +section-head()
            +ui-h2('Сервис стал лучше', 'section-head, --bold')
            +ui-h4('Вместо <span class="text-bold">Базового отчета</span> теперь доступен <span class="text-bold">Расширенный отчет</span> для детального анализа контрагентов. <br>Рассказываем, что появилось в отчете:', '--light')
          +comparison(tableData)

      +section
        .inner
          +instruction(instruction)
