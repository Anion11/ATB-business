mixin together-offer(mods)
  -
    const baseName = 'together-offer'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  -
    const togetherOfferItems =[
      {
        img: 'certificate',
        imgMods: 'certificate',
        descr: 'Расскажите о Банке вашим друзьям и отправьте им Сертификат для участия в Акции'
      },
      {
        img: 'girl',
        descr: 'Вы и каждый ваш друг, открывший счет в банке, получит бесплатное обслуживание на 2 месяца'
      },
    ]

  .together-offer(class=allMods)&attributes(attributes)
    each item in togetherOfferItems
      .together-offer__item
        .together-offer__descr !{item.descr}
        .together-offer__img(class=`together-offer__img--${item.imgMods}`)
          img(src=`img/together_offer_${item.img}.png` alt='')
    block
