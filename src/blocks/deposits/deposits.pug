        ],
        terms: [
          { name: 'Валюта', descr: 'Рубли, Доллары США, Евро, Китайские юани' },
          { name: 'Минимальная сумма', descr: 'Без ограничений / от 6&nbsp;000 китайских юаней' },
          { name: 'Максимальная сумма', descr: 'до 1&nbsp;млрд., свыше - по индивидуальному согласованию банка' },
          { name: 'Срок депозита', descr: 'Рубли - от 1 до 1825 дней, <br>Доллары США, Евро, Китайские юани - от 31 до 1825 дней' },
          { name: 'Периодичность выплаты', descr: 'Ежемесячно/в конце срока' },
