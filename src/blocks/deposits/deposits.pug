  .deposits(class=allMods)&attributes(attributes)
    each item, index in depositsData
      .deposits__item(id=item.id)
        .deposits__img
          img(src='img/deposit_img.jpg', alt='')
        .deposits__content
          .deposits__head
            .deposits__name=item.name
            +ui-p2(item.descr)
          +ui-ul(item.ul, 'deposits, --li-mb10')
          +terms(item.terms, 'deposits')(data-expand-block=`deposits_${index}`)
          .deposits__nav
            +ui-button('открыть депозит', '--empty')(href='#form-section')
            +ui-button('Подробнее', '--expand')(data-expand-btn=`deposits_${index}` data-start-text='Подробнее' data-end-text='Скрыть')
    block
