mixin banner-sapid(sapidData, mods)
  -
    const baseName = 'banner-sapid'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .banner-sapid(class=allMods)&attributes(attributes)
    each box in sapidData
      .banner-sapid__box
        +banner-sapid__button()(href=box.link class=box.class class=box.content ? 'js-open-content' : '')
          .banner-sapid__button-img
            img(src=box.img alt='')
          .banner-sapid__button-txt !{box.txt}
        if box.content
          .banner-sapid__main
            .banner-sapid__main-close
            .banner-sapid__main-content
              each item in box.content
                a.banner-sapid__main-item(href=item.link target='_blank' class=item.mods)
                  .banner-sapid__main-icon
                    img(src=item.img alt='')
                  .banner-sapid__main-txt !{item.txt}
    block

mixin banner-sapid__button()

  if (attributes.href)
    a.banner-sapid__button&attributes(attributes)
      block

  else
    .banner-sapid__button&attributes(attributes)
      block
