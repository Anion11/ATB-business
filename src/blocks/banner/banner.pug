mixin banner(mods)
  -
    const baseName = 'banner'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .banner(class=allMods)&attributes(attributes)
    .swiper
      .swiper-wrapper
        block
    .banner__nav
      .banner__nav-btn-prev
      .banner__nav-pagination
        .banner__nav-count
        svg.banner__nav-progress.bvi-no-styles(width='50' height='50' viewbox='0 0 50 50')
          circle.bvi-no-styles(cx='25' cy='25' r='24' fill='none' stroke='#fe5000' stroke-width='2')
      .banner__nav-btn-next

