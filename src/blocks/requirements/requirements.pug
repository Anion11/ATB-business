mixin requirements(requirementsItems, mods)
  -
    const baseName = 'requirements'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .requirements(class=allMods)&attributes(attributes)
    each item in requirementsItems
      .requirements__item
        .requirements__icon
          img(src=item.icon alt='')
        .requirements__text !{item.text}
    block
